@import "variables"
@import "mixins"

*
	margin 0
	padding 0
	list-style-type none
	outline none
	font-family bpg_caps
	
@font-face{
    text-transform inherit
    font-family bpg_arial
    src url(../fonts/bpg-ingiri-arial-webfont.woff)
}
@font-face{
    font-family bpg_caps
    text-transform uppercase
    src url(../fonts/bpg-web-001-caps-webfont.woff)
}	
@font-face{
    font-family bpg_normal
    text-transform inherit
    src url(../fonts/bpg-web-001-webfont.woff)
}
nav
	
	background transparent
	box-shadow none
	width auto
	li
		line-height
		&:hover 
			a
				background transparent
	ul
		li.active
			background transparent
		a
			padding 0	
			line-height 20px

.container{
	max-width 1350px
	padding 0 20px
	width calc(100% - 20px)
	box-sizing border-box
	+mq(1600px){
		max-width 1200px
	}
	+mq(1450px){
		max-width 992px
	}
	+mq(1200px){
		max-width calc(100% - 50px)
	}
	+mq(600px){
		padding 0 10px
		max-width 100%
	}
}
.clear{
	clear both
}
button:focus{
	background-color transparent
}
